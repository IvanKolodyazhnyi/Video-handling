{
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es2018",
      "lib": [
        "es2019"
      ],
      "module": "commonjs",
      "strict": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*", "webpack.config.ts", "src/main.ts"],
    "exclude": ["node_modules"]
}
